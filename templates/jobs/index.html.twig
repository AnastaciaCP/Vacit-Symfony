{% block body %}
<div class="cell medium-9 small-12">
    <div class="grid-x">
        {% for j in jobs %} 

            <div class="cell medium-2 small-3">
                {# <div class="platform float-right"> #}
                <i class="{{ j.logo }}"></i>
                {# </div> #}
            </div>
            <div class="cell medium-8 small-9">
                <span class="date">{{ j.date|date("d-m-Y") }}</span>
                <h4 class="title">{{ j.title}} voor {{ j.user.name }}</h4>
                <div class="description">{{ j.description }}</div>
            </div>
            <div class="cell small-3 show-for-small-only"></div>
            <div class="cell medium-2 small-9 align-self-middle">
                <div class="goto">
                <a href="{{ path('job', { 'id': j.id }) }}"><i class="fas fa-arrow-right"></i>
                </a>
                </div>
            </div>
        {% endfor %}
        <br>
        <br>
        <br>
        <a href="{{ path('jobs') }}">Ga naar alle vacatures <i class="fas fa-arrow-right"></i></a>
    </div>
</div>    

{% endblock %}